<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WellnessRecommend"
    android:background="@drawable/sky_n_sea"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textViewInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:text="@string/wellness_recommend"
        android:textColor="#0C0C0C"
        android:textStyle="bold|italic"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textViewWellnessRecommendName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:text="@string/wellness_name"
        android:textColor="#0C0C0C"
        android:textStyle="bold"
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/et_wellnessRecommendName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:hint="@string/wellness_name"
        android:textStyle="bold"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/textViewWellnessRecommendLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="8dp"
        android:text="@string/wellness_location"
        android:textColor="#0C0C0C"
        android:textStyle="bold"
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/et_wellnessRecommendLocation"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_marginTop="8dp"
        android:hint="@string/county"
        android:textColor="#0C0C0C"
        android:textStyle="bold"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/textViewWellnessRecommendDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="8dp"
        android:text="@string/description"
        android:textColor="#0C0C0C"
        android:textStyle="bold"
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/et_wellnessRecommendDesc"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_marginTop="8dp"
        android:hint="@string/description"
        android:textColor="#0C0C0C"
        android:textColorHint="@color/white"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/colorPrimary"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="@string/Submit"
        android:textSize="18sp"/>

    <Button
        android:id="@+id/btn_viewAll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:backgroundTint="@color/colorPrimary"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:text="@string/ViewAll"
        android:textSize="18sp"/>

    <Button
        android:id="@+id/btnAdditionalSvcs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:backgroundTint="@color/colorPrimary"
        android:text="@string/additional_svcs"
        android:textSize="18sp"/>

    <Button
        android:id="@+id/btnHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:backgroundTint="@color/colorPrimary"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:text="@string/home"
        android:textSize="18sp"/>

</LinearLayout>
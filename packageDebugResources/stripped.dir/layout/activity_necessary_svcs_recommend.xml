<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NecessarySvcsRecommend"
    android:background="@drawable/sky_n_sea"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textViewInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:text="@string/necessary_svcs_recommend"
        android:textColor="#0C0C0C"
        android:textStyle="bold"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_necessarySvcsName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:text="@string/necessary_svcs_name"
        android:textColor="#0C0C0C"
        android:textStyle="bold"
        android:textSize="16sp"/>

    <EditText
        android:id="@+id/et_necessarySvcsName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="8dp"
        android:hint="@string/necessary_svcs_name"
        android:textStyle="bold"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/tv_necessarySvcsLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="8dp"
        android:text="@string/necessary_svcs_location"
        android:textColor="#0C0C0C"
        android:textStyle="bold"
        android:textSize="16sp"/>

    <EditText
        android:id="@+id/et_necessarySvcsLocation"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_marginTop="8dp"
        android:hint="@string/necessary_svcs_location"
        android:textColor="#0C0C0C"
        android:textStyle="bold"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/tv_necessarySvcsDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="8dp"
        android:text="@string/description"
        android:textColor="#0C0C0C"
        android:textStyle="bold"
        android:textSize="16sp"/>

    <EditText
        android:id="@+id/et_necessarySvcsDescription"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_marginTop="8dp"
        android:hint="@string/necessary_svcs_description"
        android:textColor="#0C0C0C"
        android:textSize="16sp"/>

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorPrimary"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="@string/Submit"
        android:textSize="16sp"/>

    <Button
        android:id="@+id/btn_viewAll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorPrimary"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="@string/ViewAll"
        android:textSize="16sp"/>

    <Button
        android:id="@+id/btnAdditionalSvcs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:backgroundTint="@color/colorPrimary"
        android:layout_marginTop="10dp"
        android:text="@string/additional_svcs"
        android:textSize="16sp"/>

    <Button
        android:id="@+id/btnHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:backgroundTint="@color/colorPrimary"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="Home"
        android:textSize="16sp"/>

</LinearLayout>
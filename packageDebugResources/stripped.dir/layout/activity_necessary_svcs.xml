<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:alpha="0.7"
    android:background="@drawable/boat_tied_to_pier"
    tools:context=".NecessarySvcs"
    android:visibility="visible">

    <TextView
        android:id="@+id/txtNecessarySvcs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/necessary_svcs"
        android:textColor="#070707"
        android:textSize="18sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/scrollView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="350dp"
        android:layout_height="400dp"
        app:layout_constraintBottom_toTopOf="@+id/btnAddSvc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtNecessarySvcs">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                app:cardElevation="2dp"
                app:cardPreventCornerOverlap="false"
                app:cardUseCompatPadding="true" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#FFFFFF"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtIonad"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:background="#FFFFFF"
                        android:paddingTop="10dp"
                        android:paddingRight="10dp"
                        android:paddingLeft="10dp"
                        android:paddingBottom="10dp"
                        android:text="@string/ionad_naomh_padraig"
                        android:textColor="#9C27B0"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/imgIonadNaomhPÃ¡draig"
                        android:layout_width="84dp"
                        android:layout_height="76dp"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/ionad_naomh_padraig" />

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="316dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="#FFFFFF"
                        android:paddingTop="10dp"
                        android:paddingRight="10dp"
                        android:paddingLeft="10dp"
                        android:paddingBottom="10dp"
                        android:text="@string/Ionad_Info"
                        android:textColor="#2E2A2A"
                        android:textSize="16sp" />

                    <Button
                        android:id="@+id/btnIonadFB"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="15dp"
                        android:backgroundTint="@color/colorPrimary"
                        android:onClick="browser1"
                        android:text="Ionad FaceBook Page" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                app:cardElevation="2dp"
                app:cardPreventCornerOverlap="false"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="#FFFFFF"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtDaffodilCr"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#FFFFFF"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:paddingTop="10dp"
                        android:paddingRight="10dp"
                        android:paddingLeft="10dp"
                        android:paddingBottom="10dp"
                        android:text="@string/daffodil_cr"
                        android:textColor="#101A55"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/imageDaffodilCr"
                        android:layout_width="84dp"
                        android:layout_height="76dp"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/irish_cancer_society"/>

                    <TextView
                        android:id="@+id/txtIrishCancerSociety"
                        android:layout_width="316dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="#FFFFFF"
                        android:paddingTop="10dp"
                        android:paddingRight="10dp"
                        android:paddingLeft="10dp"
                        android:paddingBottom="10dp"
                        android:text="@string/Daffodil_Cr"
                        android:textSize="16sp"
                        android:textColor="#2E2A2A"
                        />

                    <Button
                        android:id="@+id/btnIrishCancerSociety"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="15dp"
                        android:backgroundTint="@color/colorPrimary"
                        android:onClick="browser1"
                        android:text="Irish Cancer Society" />

                    <Button
                        android:id="@+id/btnDaffodilCr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="15dp"
                        android:backgroundTint="@color/colorPrimary"
                        android:onClick="browser1"
                        android:text="Daffodil Centre" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                app:cardElevation="2dp"
                app:cardPreventCornerOverlap="false"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#FFFFFF"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtLGFB"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#FFFFFF"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:paddingTop="10dp"
                        android:paddingRight="10dp"
                        android:paddingLeft="10dp"
                        android:text="@string/lgfb"
                        android:textColor="#090909"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/imageLGFB"
                        android:layout_width="124dp"
                        android:layout_height="116dp"
                        android:layout_gravity="center"
                        android:foregroundGravity="center"
                        app:srcCompat="@drawable/lgfb" />

                    <TextView
                        android:id="@+id/txtViewLGFB"
                        android:layout_width="316dp"
                        android:layout_height="wrap_content"
                        android:background="#FFFFFF"
                        android:layout_gravity="center"
                        android:paddingRight="10dp"
                        android:paddingLeft="10dp"
                        android:paddingBottom="10dp"
                        android:text="@string/LGFB_Info"
                        android:textColor="#2E2A2A"
                        android:textSize="16sp" />

                    <Button
                        android:id="@+id/btnLGFB"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="15dp"
                        android:backgroundTint="@color/colorPrimary"
                        android:onClick="browser1"
                        android:text="Look Good Feel Better" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                app:cardElevation="2dp"
                app:cardPreventCornerOverlap="false"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#FFFFFF"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtCCW"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="#FFFFFF"
                        android:gravity="center"
                        android:paddingTop="10dp"
                        android:paddingRight="10dp"
                        android:paddingLeft="10dp"
                        android:paddingBottom="10dp"
                        android:text="@string/ccw"
                        android:textColor="#090909"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/imageCCW"
                        android:layout_width="84dp"
                        android:layout_height="76dp"
                        android:layout_gravity="center"
                        android:foregroundGravity="center"
                        app:srcCompat="@drawable/cancercarewest" />

                    <TextView
                        android:id="@+id/txtViewCCW"
                        android:layout_width="316dp"
                        android:layout_height="wrap_content"
                        android:background="#FFFFFF"
                        android:layout_gravity="center"
                        android:paddingTop="10dp"
                        android:paddingRight="10dp"
                        android:paddingLeft="10dp"
                        android:paddingBottom="10dp"
                        android:text="@string/CCW_Info"
                        android:textColor="#2E2A2A"
                        android:textSize="16sp" />

                    <Button
                        android:id="@+id/btnCCW"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="15dp"
                        android:backgroundTint="@color/colorPrimary"
                        android:onClick="browser1"
                        android:text="@string/ccw" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                app:cardElevation="2dp"
                app:cardPreventCornerOverlap="false"
                app:cardUseCompatPadding="true" >

                <LinearLayout
                    android:layout_width="348dp"
                    android:layout_height="match_parent"
                    android:background="#FFFFFF"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtMarieKeating"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#FFFFFF"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:paddingTop="10dp"
                        android:paddingRight="10dp"
                        android:paddingLeft="10dp"
                        android:text="@string/marie_keating"
                        android:textColor="#9C27B0"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/imgMarieKeating"
                        android:layout_width="124dp"
                        android:layout_height="116dp"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/marie_keating" />

                    <TextView
                        android:id="@+id/textViewMarieKeating"
                        android:layout_width="316dp"
                        android:layout_height="wrap_content"
                        android:background="#FFFFFF"
                        android:layout_gravity="center"
                        android:paddingRight="10dp"
                        android:paddingLeft="10dp"
                        android:paddingBottom="10dp"
                        android:text="@string/MarieKeating"
                        android:textColor="#2E2A2A"
                        android:textSize="16sp" />

                    <Button
                        android:id="@+id/btnMarieKeating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="15dp"
                        android:backgroundTint="@color/colorPrimary"
                        android:onClick="browser1"
                        android:text="The Marie Keating Foundation" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                app:cardElevation="2dp"
                app:cardPreventCornerOverlap="false"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="#FFFFFF"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtRelay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#FFFFFF"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:paddingTop="10dp"
                        android:paddingRight="10dp"
                        android:paddingLeft="10dp"
                        android:paddingBottom="10dp"
                        android:text="@string/relay_for_life"
                        android:textColor="#101A55"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/imageRelay"
                        android:layout_width="84dp"
                        android:layout_height="76dp"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/relay" />

                    <TextView
                        android:id="@+id/txtViewRelay"
                        android:layout_width="316dp"
                        android:layout_height="wrap_content"
                        android:background="#FFFFFF"
                        android:layout_gravity="center"
                        android:paddingTop="10dp"
                        android:paddingRight="10dp"
                        android:paddingLeft="10dp"
                        android:paddingBottom="10dp"
                        android:text="@string/Relay"
                        android:textSize="16sp"
                        android:textColor="#2E2A2A"/>

                    <Button
                        android:id="@+id/btnRelay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="15dp"
                        android:backgroundTint="@color/colorPrimary"
                        android:onClick="browser1"
                        android:text="@string/relay_for_life" />


                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                app:cardElevation="2dp"
                app:cardPreventCornerOverlap="false"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="#FFFFFF"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtMacmillan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="#FFFFFF"
                        android:gravity="center"
                        android:paddingTop="10dp"
                        android:paddingRight="10dp"
                        android:paddingLeft="10dp"
                        android:paddingBottom="10dp"
                        android:text="@string/macmillan"
                        android:textColor="#101A55"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/imageMacmillan"
                        android:layout_width="84dp"
                        android:layout_height="76dp"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/macmillan" />

                    <TextView
                        android:id="@+id/txtViewMacmillan"
                        android:layout_width="316dp"
                        android:layout_height="wrap_content"
                        android:background="#FFFFFF"
                        android:layout_gravity="center"
                        android:paddingTop="10dp"
                        android:paddingRight="10dp"
                        android:paddingLeft="10dp"
                        android:paddingBottom="10dp"
                        android:text="@string/Macmillan"
                        android:textSize="16sp"
                        android:textColor="@color/black"/>

                    <Button
                        android:id="@+id/btnMacmillan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="15dp"
                        android:backgroundTint="@color/colorPrimary"
                        android:onClick="browser1"
                        android:text="@string/macmillan" />


                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnAddSvc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="@color/colorPrimary"
        android:gravity="center"
        android:text="@string/add_necessary_svc"
        android:textSize="16sp"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@+id/scrollView2"
        app:layout_constraintBottom_toTopOf="@id/btnAdditionalSvcs"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <Button
        android:id="@+id/btnAdditionalSvcs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:backgroundTint="@color/colorPrimary"
        android:text="@string/additional_svcs"
        android:textSize="16sp"
        android:layout_margin="10dp"
        app:layout_constraintBottom_toTopOf="@id/btnHome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAddSvc" />

    <Button
        android:id="@+id/btnHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="@color/colorPrimary"
        android:gravity="center"
        android:text="Home"
        android:textSize="16sp"
        android:layout_margin="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAdditionalSvcs" />

</androidx.constraintlayout.widget.ConstraintLayout>